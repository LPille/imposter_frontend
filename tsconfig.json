{
  "compilerOptions": {
    "target": "ES6", // Set your desired ECMAScript version
    "lib": ["dom", "dom.iterable", "esnext"], // Make sure DOM and ES libraries are included
    "allowJs": true, // Allows compiling JavaScript files
    "jsx": "react-jsx", // JSX setting for React 17+
    "strict": true, // Enables strict type checking
    "moduleResolution": "node", // Resolve modules in Node.js-style
    "isolatedModules": true, // Ensures that each file can be transpiled separately
    "noEmit": true, // Prevent emitting JS files during compilation
    "esModuleInterop": true, // Allows default imports from CommonJS modules
    "skipLibCheck": true, // Skip type checking for node_modules
    "forceConsistentCasingInFileNames": true // Enforce case sensitivity in file names
  },
  "include": ["src"], // Make sure TypeScript checks the src directory
  "exclude": ["node_modules"] // Exclude node_modules directory
}
